datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id         String @id
  name       String
  spotify_id String @unique

  spotify_access_token  String  @db.Text
  spotify_refresh_token String? @db.Text

  spotify_expires_at DateTime?
}

model track {
  id   String @id
  name String

  duration Int?     @db.Int
  explicit Boolean?

  artist_id String?
  artist   artist? @relation(fields: [artist_id], references: [id])

  album_id String?
  album   album?  @relation(fields: [album_id], references: [id])

  listen listen[]
}

model artist {
  id   String @id
  name String

  track track[]
}

model album {
  id       String @id
  name     String
  cover_art String

  track track[]
}

model listen {
  id       BigInt @id
  track_id String
  track    track  @relation(fields: [track_id], references: [id])
}
