        "lint:fix": "biome lint --write .",
        "check": "turbo lint typecheck format:check",
        "clean": "turbo clean"
    },
    "devDependencies": {
        "@biomejs/biome": "2.1.3",
        "@machina/tsconfig": "workspace:^",
        "@openapitools/openapi-generator-cli": "^2.21.4",
        "tsx": "^4.20.3",
        "turbo": "^2.5.5",
        "typescript": "^5.8.3"
    },
    "packageManager": "pnpm@10.14.0",
    "dependencies": {
        "@dotenvx/dotenvx": "^1.48.4"
    }
}
