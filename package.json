{
    "name": "machina",
    "repository": "https://github.com/iAverages/machina.git",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "dotenvx run -- mprocs",
        "build": "dotenvx run -- turbo build",
        "db": "dotenvx run -- pnpm run --dir ./packages/database/ prisma",
